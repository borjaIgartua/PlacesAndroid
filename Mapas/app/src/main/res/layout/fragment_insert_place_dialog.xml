<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.borja.mapas.InsertPlaceDialogFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="16dp" >

    <EditText
        android:id="@+id/insert_place_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/insert_place_title"
        android:layout_marginBottom="15dp"/>

    <EditText
        android:id="@+id/insert_place_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/insert_place_description" />

    </LinearLayout>

</FrameLayout>
